{
  "manifest_version": 3,
  "name": "PrivScore Web",
  "version": "0.1.0",
  "description": "Califica la privacidad de la web actual (A–E) usando cookies + política de privacidad/cookies.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "PrivScore",
    "default_popup": "src/popup/popup.html"
  },

  "options_page": "src/options/options.html",

    "background": {
    "service_worker": "src/background/service_worker.js",
    "type": "module"
    },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
  
}
